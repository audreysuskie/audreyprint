extends newbase

block content
  .wrapper
    .form-content
      .form-container
        h1 Create an Account
        form#form-signup
          - var obj = JSON.stringify(max).split('customerNumber')[1].replace(/\D/g, "");
          - var number1 = max.length
          - const sum = (2100 + number1) + 1;
          input.form-input(id="customerNumber", type='hidden' value=`${sum}`)
          .form-row
            .form-group
              label.form-label(for='firstName') First Name
              input.form-input(id="firstName", type='text', required)
            .form-group
              label.form-label(for='lastName') Last Name
              input.form-input(id="lastName", type='text', required)
          .form-group
            label.form-label(for='company') Company Name
            input.form-input(id='company', type='text')
          .form-group
            label.form-label(for='email') Email
            input.form-input(id='email', type='email', required)
