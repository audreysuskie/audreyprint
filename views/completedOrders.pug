extends newbase

block content
  .page-container
    .dashboard-container
      .dash-wrap
        include _dashboardnav
        .dashboard
          if user.role == 'admin'
            h1 Admin Dashboard
          else
            h1= `${user.name.firstName}'s Account`
          .account-sections
            h2= title
            
            table#history-table
              tr 
                th Date
                th Order Number
                th Service
                th Order Status

              if orders.length == 0
                tr
                  td(colspan='4')
                    .text.center No completed orders to display.
              else
                each order in orders
                  tr
                    td= order.orderDate
                    td= order.orderNumber
                    td= order.service
                    td= order.status