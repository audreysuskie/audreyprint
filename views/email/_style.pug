style.
  img {
    border: none;
    -ms-interpolation-mode: bicubic;
    max-width: 100%; 
  }
  body {
    background-color: #edeeef;
    font-family: sans-serif;
    -webkit-font-smoothing: antialiased;
    font-size: 20px;
    line-height: 1.5;
    margin: 0;
    padding: 0;
    -ms-text-size-adjust: 100%;
    -webkit-text-size-adjust: 100%; 
  }
  table {
    border-collapse: separate;
    mso-table-lspace: 0pt;
    mso-table-rspace: 0pt;
    width: 100%;
  }
    
  table td {
      font-family: sans-serif;
      vertical-align: top;
      text-align: left; 
  }

  .email-logo {
    width: 100%;
    border: 0; 
    outline: none; 
    text-decoration: none; 
    display: block;
    margin: 10px auto 20px auto;
  }

  .message-logo {
    width: 50%;
    border: 0; 
    outline: none; 
    text-decoration: none; 
    display: block;
    margin: 10px auto 20px auto;
  }

  .green {
    color: #3b566a;
  }
  .body {
    background-color: #f6f6f6;
    width: 100%; 
  }
  .container {
    display: block;
    margin: 0 auto !important;
    /* makes it centered */
    max-width: 650px;
    padding: 10px;
    width: 100%; 
  }
  .content {
    box-sizing: border-box;
    display: block;
    margin: 0 auto;
    max-width: 650px;
    padding: 10px; 
  }
  .main {
    background: #fff;
    border: 15px solid #fff;
    border-radius: 0px;
    width: 100%; 
    max-width: 650px;
  }
  .wrapper {
    box-sizing: border-box;
    padding: 30px 20px 20px 20px; 
    max-width: 650px;
    border-top: 2px solid #5280a4;
    border-bottom: 2px solid #5280a4;
  }

  .content-block {
    padding-bottom: 10px;
    padding-top: 10px;
  }
  .footer {
    clear: both;
    margin-top: 10px;
    text-align: center;
    width: 100%; 
  }
    .footer td,
    .footer p,
    .footer span,
    .footer a {
      color: #3b566a;
      font-size: 12px;
      text-align: center; 
  }
  h1,
  h2,
  h3,
  h4 {
    color: #000000;
    font-family: sans-serif;
    font-weight: 400;
    line-height: 1.4;
    margin: 0;
    margin-bottom: 30px; 
  }
  h1 {
    font-size: 35px;
    font-weight: 300;
    text-align: center;
    text-transform: capitalize; 
  }
  p,
  ul,
  ol {
    font-family: sans-serif;
    font-weight: normal;
    margin: 0;
    margin-bottom: 20px; 
    overflow-wrap: break-word;
    color: #3b566a;
  }
    p li,
    ul li,
    ol li {
      list-style-position: inside;
      margin-left: 5px; 
  }
  a {
    color: #3b566a;
    text-decoration: underline; 
  }

  .text-box {
    width: 80%;
    margin: 0px auto 8px auto;
  }

  .text-center {
    width: 100%;
    line-height: 145%;
    text-align: center;
    font-weight: bold;
    font-size: 22px;
    padding: 15px 10px;
    margin: 15px auto;
  }

  .message-title {
    font-family: sans-serif;
    text-align: left;
    font-size: 24px;
    font-weight: bold;
    width: 100%;
    margin: 30px 0px 10px 0px;
    color: #3b566a;
  }

  .message-text {
    font-family: sans-serif;
    font-weight: bold;
    font-size: 1rem;
    margin-bottom: 20px; 
    overflow-wrap: break-word;
    color: #3b566a;
  }

  .message-text span {
    font-weight: normal;
    font-size: 1rem;
  }

  .messsage-box {
    font-family: sans-serif;
    font-size: 14px;
    text-align: left;
    font-weight: normal;
    width: 80%;
    margin: 0px auto 20px auto;
    border: 1px solid #000000;
    padding: 10px;
  }

  .btn {
    box-sizing: border-box;
    width: 100%; }
    .btn > tbody > tr > td {
      padding: 10px 0px 30px 0px; }
    .btn table {
      width: auto; 
  }
    .btn table td {
      background-color: #ffffff;
      border-radius: 5px;
      text-align: center; 
  }
    .btn a {
      background-color: rgb(255, 196, 0);
      border: 1px solid rgb(221, 151, 2);
      border-radius: 8px;
      box-sizing: border-box;
      color: #fff;
      cursor: pointer;
      display: inline-block;
      font-size: 18px;
      font-weight: bold;
      margin: 0;
      padding: 12px 25px;
      text-decoration: none;
      text-transform: capitalize; 
  }
  .btn-primary table td {
    background-color: #b4211c; 
  }
  .btn-primary a {
    background-color: #b4211c;
    border-color: #940e09;
    color: #fff; 
  }
  .last {
    margin-bottom: 0; 
  }
  .first {
    margin-top: 0; 
  }
  .align-center {
    text-align: center; 
  }
  .align-right {
    text-align: right; 
  }
  .align-left {
    text-align: left; 
  }
  .clear {
    clear: both; 
  }
  .mt0 {
    margin-top: 0; 
  }
  .mb0 {
    margin-bottom: 0; 
  }
  .preheader {
    color: transparent;
    display: none;
    height: 0;
    max-height: 0;
    max-width: 0;
    opacity: 0;
    overflow: hidden;
    mso-hide: all;
    visibility: hidden;
    width: 0; 
  }
  .powered-by a {
    text-decoration: none; 
  }
  hr {
    border: 0;
    border-bottom: 1px solid #edeeef83;
    margin: 20px 0; 
  }
  @media only screen and (max-width: 620px) {
    table[class=body] h1 {
      font-size: 28px !important;
      margin-bottom: 10px !important; 
    }
    table[class=body] p,
    table[class=body] ul,
    table[class=body] ol,
    table[class=body] td,
    table[class=body] span,
    table[class=body] a {
      font-size: 16px !important; 
    }
    table[class=body] .wrapper,
    table[class=body] .article {
      padding: 10px !important; 
    }
    table[class=body] .content {
      padding: 0 !important; 
    }
    table[class=body] .container {
      padding: 0 !important;
      width: 100% !important; 
    }
    table[class=body] .main {
      border-left-width: 0 !important;
      border-radius: 0 !important;
      border-right-width: 0 !important; 
    }
    table[class=body] .btn table {
      width: 100% !important; 
      text-align: center;
    }
    table[class=body] .btn a {
      width: 100% !important;
      text-align: center;
      margin: 0 auto; 
    }
    table[class=body] .img-responsive {
      height: auto !important;
      max-width: 100% !important;
      width: auto !important; 
    }
  }
  @media all {
    .ExternalClass {
      width: 100%; 
    }
    .ExternalClass,
    .ExternalClass p,
    .ExternalClass span,
    .ExternalClass font,
    .ExternalClass td,
    .ExternalClass div {
      line-height: 100%; 
    }
    .apple-link a {
      color: inherit !important;
      font-family: inherit !important;
      font-size: inherit !important;
      font-weight: inherit !important;
      line-height: inherit !important;
      text-decoration: none !important; 
    }
    .btn-primary table td:hover {
      background-color: #940e09 !important; 
    }
    .btn-primary a:hover {
      background-color: #940e09 !important;
      border-color: #940e09 !important; 
    } 
    .natours-logo {
      border: 0; 
      outline: none; 
      text-decoration: none; 
      display: block;
      margin-top: 10px;
      margin-bottom: 25px;
    }
  }
