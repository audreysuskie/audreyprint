extends lpbase

block content
  .wrapper
    .form-content
      .form-container
        .content-title Login To Your Account
        form#login-form
          .form-group
            label.form-label(for='email') Email address
            input#email.form-input(type='email', name='email' placeholder='you@example.com', required)
          .form-group
            label.form-label(for='password') Password
            input#password.form-input(type='password', name='password' placeholder='••••••••', required, minlength='8')
          
          .form-group
            button.submit.form-button Login
            a.form-link-text(href='/forgotpassword') Forgot Password?